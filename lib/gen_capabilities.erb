<div class="capabilities">
  <div class="sidheader">
    <span class="sidtext">with capabilities:</span>
  </div>
  <div class="sidbody">
<% 
  root['capabilities'].each do |nfr|
  if nfr.instance_of? Hash%>
    <div class='suggestion'><%=nfr['suggestion']%></div><%
  else%>
    <div class='capability'><%=nfr%></div><%
  end
  end%>
</div>
  </div>
